{
  "ts-node": {
      "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "dom"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
        "@modules/": ["src/modules/"],
        "": ["node_modules/"]
    }
  },
  "include": ["src//*"]
}